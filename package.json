{
  "name": "unit-testing-react-enzyme-shallow-jest",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "main": "src/index.js",
  "dependencies": {
    "froala-editor": "3.1.1",
    "jest": "26.1.0",
    "jest-transform-css": "2.0.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-froala-wysiwyg": "3.1.1",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.0",
    "@testing-library/react": "10.4.3",
    "@testing-library/react-hooks": "3.3.0",
    "babel-jest": "26.1.0",
    "react-test-renderer": "16.13.1",
    "typescript": "3.9.5"
  },
  "scripts": {
    "test": "jest",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      "^.+\\.(css|styl|less|sass|scss)$": "jest-transform-css"
    },
    "setupFilesAfterEnv": [
      "./setup-tests.js"
    ],
    "moduleNameMapper": {
      "\\.(css|sass|scss)$": "<rootDir>/__mocks__/styles.js"
    }
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  }
}
